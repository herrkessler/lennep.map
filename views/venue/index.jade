extends ../layout

block body

  main#content

    #map
      #map-canvas

    section#list
      nav#list-search
        ul
          li Suche
          li Suche
          li Suche
      ul.card-list
        each venue in venues
          li.card(data-venue=venue.id, class=favourite ? 'favourite' : '')
            .card-avatar
              a(href="")
                img(src="/images/daunia.jpg")
              .card-favourite
                i.fa.fa-heart
            .card-content
              h4= venue.title
              .card-facts
                .card-rating
                  i.fa.fa-star
                .card-distance
                  i.fa.fa-map-marker
