    ul#main-navigation
      li.menu-list-item.logo
        a(href="/") lennep.map
      unless req.user != undefined
        li.menu-list-item.signup
          a(href="/register").button.highlight Signup
        li.menu-list-item.login
          a(href="/login").button Login
      else
        li.menu-list-item.logout
