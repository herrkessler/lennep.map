      li.menu-list-item.map
        a(href="/venues/") Map

    #mobile-navigation-wrapper
      ul#mobile-navigation
        li.menu-list-item.tour
          a(href="#") Tour
        li.menu-list-item.favourites
          a(href="#") Favouriten
        li.menu-list-item.map
          a(href="/venue") Map
        unless req.isAuthenticated()
          li.menu-list-item.login
            a(href="/login").button Login
          li.menu-list-item.signup
            a(href="/register").button.highlight Signup
        else
          li.menu-list-item.user
            a(href="/user/show/#{req.user.id}")
              img.user-icon(src="/images/user.jpg")
            a.button(href="/user/show/#{req.user.id}")= req.user.username 
          li.menu-list-item.logout
            a(href="/logout").button.highlight Logout
